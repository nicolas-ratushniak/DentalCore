<Window x:Class="DentalCore.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:local="clr-namespace:DentalCore.Wpf"
        xmlns:controls="clr-namespace:DentalCore.Wpf.Controls"
        xmlns:converters="clr-namespace:DentalCore.Wpf.Converters"
        xmlns:navigation="clr-namespace:DentalCore.Wpf.Services.Navigation"
        mc:Ignorable="d"
        Title="Dental Core" 
        Height="700" MinHeight="620"
        Width="1000" MinWidth="1000">
    
    <Window.Resources>
        <converters:InverseViewTypeEqualsToVisibilityConverter x:Key="InverseViewTypeEqualsToVisibilityConverter"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <controls:NavBar Grid.Row="0"
                         Visibility="{Binding CurrentNavBarOption,
                         Converter={StaticResource InverseViewTypeEqualsToVisibilityConverter},
                         ConverterParameter={x:Static navigation:ViewType.Login}}"/> 
        
        <ContentControl Grid.Row="1" Content="{Binding CurrentViewModel}"/>
    </Grid>
</Window>
