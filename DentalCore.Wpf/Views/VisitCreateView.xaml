<UserControl x:Class="DentalCore.Wpf.Views.VisitCreateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"

             xmlns:converters="clr-namespace:DentalCore.Wpf.Converters"
             xmlns:inners="clr-namespace:DentalCore.Wpf.ViewModels.Inners"
             xmlns:components="clr-namespace:DentalCore.Wpf.Views.Components"
             xmlns:custom="clr-namespace:DentalCore.Wpf.Controls;assembly=DentalCore.Wpf.Controls"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000"
             Loaded="OnLoaded">

    <UserControl.Resources>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" />

        <Style x:Key="NiceDoctorList" TargetType="ListBox">
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate DataType="{x:Type inners:DoctorListItemViewModel}">
                        <TextBlock Text="{Binding Path=FullName}"
                                   FontSize="18" />
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="90*" />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="1"
              Margin="0 24">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0"
                       FontSize="28"
                       FontWeight="Bold"
                       Text="Новий візит"
                       Margin="0 0 0 24" />

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="24" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                
                <!-- Patient Info -->
                <Border Grid.Row="0" Grid.Column="0"
                        Style="{StaticResource NiceBorder}"
                        Margin="0 0 0 10">
                    
                    <TextBlock Text="{Binding PatientInfo}"/>
                </Border>

                <!-- Select Doctor -->
                <Grid Grid.Row="1" Grid.Column="0"
                      Margin="0 0 0 10">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <custom:PlaceholderTextBox Grid.Row="0"
                                               Text="{Binding DoctorSearchFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                               Placeholder="Оберіть лікаря" />

                    <Popup Grid.Row="1"
                           IsOpen="{Binding IsDoctorListVisible}"
                           ClipToBounds="True"
                           AllowsTransparency="True"
                           PopupAnimation="Slide"
                           StaysOpen="False">

                        <Border Style="{StaticResource NiceBorder}"
                                Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Grid}}"
                                MaxHeight="250"
                                Background="White">
                            <Grid>
                                <TextBlock Text="Нікого не знайдено"
                                           Panel.ZIndex="1"
                                           TextWrapping="Wrap"
                                           Foreground="{StaticResource BrushGrey}"
                                           FontSize="16"
                                           Visibility="{Binding ElementName=DoctorPopup, Path=HasItems,
                                               Converter={StaticResource InverseBoolToVisibilityConverter}}" />

                                <ListBox x:Name="DoctorPopup"
                                         ScrollViewer.CanContentScroll="True"
                                         ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                         Style="{StaticResource NiceDoctorList}"
                                         ItemsSource="{Binding DoctorCollectionView}"
                                         SelectedItem="{Binding SelectedDoctor, Mode=TwoWay}" />
                            </Grid>
                        </Border>
                    </Popup>
                </Grid>

                <!-- Diagnosis -->
                <Grid Grid.Row="2" Column="0">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="2*" />
                        <RowDefinition Height="3*" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               FontSize="16"
                               Text="Діагноз"
                               Margin="0 0 0 15" />

                    <Border Grid.Row="1"
                            Style="{StaticResource NiceBorder}"
                            Padding="3">

                        <TextBox Grid.Row="1"
                                 Text="{Binding Diagnosis, UpdateSourceTrigger=PropertyChanged}"
                                 BorderThickness="0"
                                 FontSize="18"
                                 TextWrapping="Wrap" />
                    </Border>
                </Grid>

                <!-- Treatment Items -->
                <components:TreatmentSelector Grid.Row="0" Grid.RowSpan="3" Grid.Column="2"
                                              DataContext="{Binding TreatmentSelector}"/>

                <!-- Total Sum and First Payment -->
                <Grid Grid.Row="3" Grid.Column="2"
                      Margin="0 24 0 0">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0"
                          Margin="0 0 0 12">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   FontWeight="Bold"
                                   FontSize="18"
                                   Text="Всього: "
                                   Margin="0 0 12 0" />

                        <TextBlock Grid.Column="2"
                                   FontWeight="Bold"
                                   FontSize="18"
                                   Text="{Binding TotalSum, StringFormat= {}{0} грн }" />
                    </Grid>

                    <Grid Grid.Row="1"
                          Margin="0 0 0 5">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   FontSize="18"
                                   Text="Внесено коштів: "
                                   Margin="0 0 12 0" />

                        <custom:IntegerTextBox Grid.Column="2"
                                               Width="80"
                                               Value="{Binding FirstPayment,
                                                 Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>
                </Grid>
            </Grid>

            <Grid Grid.Row="2"
                  Margin="0 24 0 0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding ErrorMessage}"
                           Style="{StaticResource ErrorMessage}" />

                <Button Grid.Column="1"
                        Style="{StaticResource CancelButton}"
                        Command="{Binding CancelCommand}"
                        Content="Скасувати"
                        Margin="0 0 24 0" />

                <Button Grid.Column="2"
                        Style="{StaticResource NiceButton}"
                        Command="{Binding SubmitCommand}"
                        Content="Зберегти" />

            </Grid>
        </Grid>
    </Grid>
</UserControl>